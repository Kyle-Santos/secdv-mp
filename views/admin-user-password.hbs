<div class="admin-dashboard">
    <h1>Change Password for {{user.user}}</h1>
    <div class="user-management-form">
        <form method="POST" action="/admin/users/{{user._id}}/password">

            <div class="form-group">
                <label>Username:</label>
                <input type="text" value="{{user.user}}" disabled>
            </div>

            <div class="form-group">
                <label>New Password:</label>
                <input type="password" name="newPassword" required placeholder="Enter new password">
            </div>

            <div class="form-group">
                <label>Confirm Password:</label>
                <input type="password" name="confirmPassword" required placeholder="Re-enter new password">
            </div>

            <div class="form-actions">
                <button type="submit" class="create-user-btn">Update Password</button>
                <a href="/admin/dashboard" class="cancel-btn">Cancel</a>
            </div>

        </form>
    </div>

</div>
