<div class="admin-dashboard">

    <h1>Create New User</h1>

    <div class="user-management-form">

        <form method="POST" action="/admin/users/create">

            <div class="form-group">
                <label>Username:</label>
                <input type="text" name="user" placeholder="Enter username" required>
            </div>

            <div class="form-group">
                <label>Password:</label>
                <input type="password" name="pass" placeholder="Enter password" required>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="email" name="email" placeholder="Enter email">
            </div>

            <div class="form-group">
                <label>City:</label>
                <input type="text" name="city" placeholder="City">
            </div>

            <div class="form-group">
                <label>Role:</label>
                <select id="roleSelect" name="role" required>
                    <option value="owner">Owner</option>
                    <option value="admin">Admin</option>
                    <option value="reviewer">Reviewer</option>
                </select>
            </div>

            <!-- SHOW ONLY IF ROLE = OWNER -->
            <div class="form-group" id="condoSelectGroup" style="display:none;">
                <label>Assign Condo:</label>
                <select name="assignedCondo">
                    {{#each condos}}
                        <option value="{{this.id}}">{{this.id}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-actions">
                <button type="submit" class="create-user-btn">Create User</button>
                <a href="/admin/dashboard" class="cancel-btn">Cancel</a>
            </div>

        </form>

    </div>

</div>
